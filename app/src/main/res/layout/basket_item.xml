<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="12dp"
        android:src="@android:drawable/ic_lock_lock"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_alignTop="@+id/item_icon"
        android:textColor="@android:color/holo_red_dark"
        android:text="Пицца темпо Пицц jhvh jh h ih i а темпо Пицца темпо Пицца темпо"
        android:maxLines="3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/item_rem_basket"/>


    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="lkenvwkoenw eob woeb owe bo weo bokw ebok woek bowe bko wek"
        android:textStyle="bold"
        android:layout_below="@+id/item_icon"
        />

    <Button
        android:id="@+id/item_rem_basket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textStyle="bold"
        android:text="\u2716"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/item_deinc_basket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="\u2014"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/item_count"
        android:layout_below="@+id/item_description"
        />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textSize="18sp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_description"/>

    <Button
        android:id="@+id/item_add_basket"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textStyle="bold"
        android:text="+"
        android:layout_toRightOf="@id/item_count"
        android:layout_below="@+id/item_description"/>


    <TextView
        android:id="@+id/item_price"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text="10 р."
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_description"
        />

</RelativeLayout>